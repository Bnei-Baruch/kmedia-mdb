{
  "name":            "kmedia-mdb",
  "version":         "0.1.0",
  "license":         "MIT",
  "homepage":        "https://kabbalahmedia.info/",
  "repository":      {
    "type": "git",
    "url":  "https://github.com/Bnei-Baruch/kmedia-mdb"
  },
  "scripts":         {
    "critical-css":         "node-sass src/stylesheets/critical.scss | yarn run postcss --use autoprefixer --use cssnano -o build/critical.css --no-map",
    "apply-critical-css":   "sed \"s*</head>*<style type='text/css'>`cat build/critical.css`</style></head>*\" build/index.html > build/critical.html",
    "analyze":              "yarn build:production && source-map-explorer build/static/js/main.*",
    "start-js":             "react-scripts start",
    "start-server:live":    "NODE_ENV=development npx nodemon server/index.js",
    "ws-start-server:live": "set \"NODE_ENV=development\" && npx nodemon server/index.js",
    "start-server":         "NODE_ENV=development node server/index.js",
    "ws-start-server":      "set \"NODE_ENV=development\" && node server/index.js",
    "start":                "npm-run-all -p start-js start-server",
    "ws-start":             "npm-run-all -p start-js ws-start-server",
    "start:live":           "npm-run-all -p start-js start-server:live",
    "build":                "sh -ac '. ./.env.${REACT_APP_ENV}; react-scripts build && yarn critical-css && yarn apply-critical-css'",
    "build:local":          "REACT_APP_ENV=production sh -ac '. ./.env; react-scripts build && yarn critical-css && yarn apply-critical-css'",
    "build:staging":        "REACT_APP_ENV=staging yarn build",
    "build:production":     "REACT_APP_ENV=production yarn build",
    "build:suitcase":       "REACT_APP_ENV=suitcase yarn build",
    "test":                 "react-scripts test"
  },
  "devDependencies": {
    "babel-cli":                 "^6.24.1",
    "compression":               "^1.7.3",
    "enzyme":                    "^3.6.0",
    "enzyme-adapter-react-16":   "^1.5.0",
    "eslint-config-airbnb":      "^17.1.0",
    "eslint-config-jest-enzyme": "^7.0.1",
    "eslint-plugin-import":      "^2.14.0",
    "eslint-plugin-jest":        "^22.0.0",
    "eslint-plugin-jsx-a11y":    "^6.1.1",
    "eslint-plugin-react":       "^7.11.1",
    "express-watcher":           "^1.0.3",
    "http-proxy-middleware":     "^0.19.0",
    "jest-environment-enzyme":   "^7.0.1",
    "jest-enzyme":               "^7.0.1",
    "node-sass":                 "^4.9.3",
    "nodemon":                   "^1.18.4",
    "npm-run-all":               "^4.0.2",
    "postcss-cli":               "^6.0.1",
    "react-scripts":             "2.1.1",
    "react-test-renderer":       "^16.5.2",
    "sinon":                     "^7.1.1",
    "source-map-explorer":       "^1.6.0"
  },
  "dependencies":    {
    "axios":                          "^0.18.0",
    "babel-core":                     "^6.26.0",
    "babel-plugin-lodash":            "^3.2.11",
    "babel-plugin-module-resolver":   "^3.1.0",
    "babel-polyfill":                 "^6.23.0",
    "babel-preset-env":               "^1.6.0",
    "babel-preset-react-app":         "^3.1.2",
    "babel-register":                 "^6.26.0",
    "child_process":                  "^1.0.2",
    "classnames":                     "^2.2.5",
    "cookie":                         "^0.3.1",
