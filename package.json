  "jest":            {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!<rootDir>/node_modules/",
      "!**/__tests__/**"
    ],
    "coverageThreshold":   {
      "global": {
        "branches":   1,
        "functions":  1,
        "lines":      1,
        "statements": 1
      }
    },
    "coverageReporters":   [
      "text-summary",
      "lcov"
    ],
    "snapshotSerializers": []
  },
  "browserslist":    [
    ">0.2%",
    "not dead",
    "not ie < 11",
    "not op_mini all"
  ]
