    "nodemon": "^1.18.4",
    "npm-run-all": "^4.0.2",
    "postcss-cli": "^6.0.1",
    "react-scripts": "3.2.0",
    "react-test-renderer": "^16.10.2",
    "sass-lint": "^1.12.1",
    "script-ext-html-webpack-plugin": "^2.1.3",
    "source-map-explorer": "^2.1.0",
    "testcafe": "^1.1.0"
