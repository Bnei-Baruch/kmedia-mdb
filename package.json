{
  "name": "kmedia-mdb",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-plugin-lodash": "^3.2.11",
    "babel-preset-env": "^1.6.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^20.0.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "jest": "^20.0.4",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.0.2",
    "react-scripts": "1.0.10",
    "react-test-renderer": "^15.6.1",
    "regenerator-runtime": "^0.10.5"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "child_process": "^1.0.2",
    "classnames": "^2.2.5",
    "core-js": "^2.4.1",
    "dotenv": "^4.0.0",
    "history": "^4.6.3",
    "i18next": "^8.4.3",
    "i18next-xhr-backend": "^1.4.2",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "moment-duration-format": "^1.3.0",
    "prop-types": "^15.5.10",
    "qs": "^6.5.0",
    "react": "^15.6.1",
    "react-copy-to-clipboard": "^5.0.0",
    "react-day-picker": "^5.5.3",
    "react-dom": "^15.5.4",
    "react-i18next": "^4.6.2",
    "react-jw-player": "github:Bnei-Baruch/react-jw-player",
    "react-redux": "^5.0.5",
    "react-redux-loading-bar": "^2.9.2",
    "react-router-dom": "^4.1.1",
    "react-router-redux": "^5.0.0-alpha.6",
    "redux": "^3.7.1",
    "redux-actions": "^2.2.1",
    "redux-saga": "^0.15.4",
    "semantic-ui-react": "^0.71.1",
    "zl-fetch": "^1.0.4"
  },
  "scripts": {
    "serve-locals": "node bin/serve-locals",
    "build-css": "node-sass src/ -o src/",
    "watch-css": "npm run build-css && node-sass src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js serve-locals",
    "build": "npm run build-css && react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "deploy": "npm run build && scp -r build/* archive@app.archive.bbdomain.org:/sites/archive-frontend "
  },
  "jest": {},
  "eslintConfig": {
    "extends": [
      "airbnb",
      "plugin:jest/recommended"
    ],
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "es6": true,
      "jest": true
    },
    "plugins": [
      "react",
      "jest",
      "import"
    ],
    "settings": {
      "parser": "babel-eslint",
      "import/parser": "babel-eslint",
      "import/resolve": {},
      "ecmaFeatures": {
        "classes": true,
        "jsx": true
      }
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "no-console": "warn",
      "comma-dangle": "off",
      "key-spacing": "off",
      "max-len": "off",
      "import/prefer-default-export": "off",
      "react/jsx-filename-extension": "off",
      "no-multi-spaces": "off",
      "no-plusplus": "off",
      "import/no-named-as-default-member": "off",
      "no-unused-vars": [
        1,
        {
          "varsIgnorePattern": "_",
          "argsIgnorePattern": "_"
        }
      ],
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "_browserHistory",
            "__data",
            "__default"
          ]
        }
      ],
      "react/no-multi-comp": [
        1,
        {
          "ignoreStateless": false
        }
      ]
    },
    "globals": {
      "socket": true,
      "enzyme": true
    }
  }
}
