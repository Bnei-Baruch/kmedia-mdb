  },
  "jest":            {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!<rootDir>/node_modules/",
      "!**/__tests__/**"
    ],
    "coverageThreshold":   {
      "global": {
        "branches":   90,
        "functions":  90,
        "lines":      90,
        "statements": 90
      }
    },
    "coverageReporters":   [
      "text-summary",
      "lcov"
    ],
    "snapshotSerializers": []
  },
  "browserslist":    [
    ">0.2%",
    "not dead",
    "not ie < 11",
    "not op_mini all"
  ]
}
