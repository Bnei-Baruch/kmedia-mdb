{
  "name": "kmedia-mdb",
  "version": "0.1.0",
  "license": "MIT",
  "homepage": "https://archive.kbb1.com/",
  "repository": {
    "type": "git",
    "url": "https://github.com/Bnei-Baruch/kmedia-mdb"
  },
  "scripts": {
    "analyze": "REACT_APP_ENV=production yarn build && source-map-explorer build/static/js/main.*",
    "serve-locals": "node bin/serve-locals",
    "cosmos": "cosmos",
    "cosmos::export": "cosmos-export",
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js serve-locals",
    "build": "sh -ac '. ./.env.${REACT_APP_ENV}; yarn build-css && react-scripts build'",
    "build:staging": "REACT_APP_ENV=staging yarn build",
    "build:production": "REACT_APP_ENV=production yarn build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "deploy": "yarn build:production && scp -r build/* archive@app.archive.bbdomain.org:/sites/archive-frontend ",
    "deploy-dev": "yarn build:staging && scp -r build/* archive@archive-dev.bbdomain.org:/sites/archive-frontend "
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-jest": "^20.0.3",
    "babel-plugin-lodash": "^3.3.2",
    "babel-preset-env": "^1.6.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-15": "^1.0.5",
    "enzyme-to-json": "^3.3.0",
    "eslint": "^4.13.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.6.2",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "jest": "^20.0.4",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "react-cosmos": "^3.2.0",
    "react-cosmos-test": "^3.2.0",
    "react-scripts": "1.0.17",
    "react-test-renderer": "^15.6.2",
    "regenerator-runtime": "^0.11.1",
    "sinon": "^4.1.3",
    "source-map-explorer": "^1.5.0"
  },
  "dependencies": {
    "axios": "^0.17.1",
    "babel-polyfill": "^6.23.0",
    "child_process": "^1.0.2",
    "classnames": "^2.2.5",
    "core-js": "^2.5.3",
    "dotenv": "^4.0.0",
    "history": "^4.7.2",
    "hoist-non-react-statics": "^2.2.2",
    "i18next": "^8.4.3",
    "i18next-xhr-backend": "^1.5.1",
    "lodash": "^4.17.4",
    "moment": "^2.20.1",
    "moment-duration-format": "^2.0.1",
    "prop-types": "^15.6.0",
    "qs": "^6.5.1",
    "react": "^15.6.2",
    "react-copy-to-clipboard": "^5.0.0",
    "react-day-picker": "github:Bnei-Baruch/react-day-picker",
    "react-dom": "^15.6.2",
    "react-ga": "^2.3.5",
    "react-google-maps": "^8.5.0",
    "react-i18next": "^4.8.0",
    "react-image-gallery": "^0.8.7",
    "react-media-player": "^0.7.0",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.9",
    "react-share": "^1.19.0",
    "react-virtualized": "^9.17.1",
    "redux": "^3.7.2",
    "redux-actions": "^2.2.1",
    "redux-saga": "^0.16.0",
    "semantic-ui-react": "^0.77.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!<rootDir>/node_modules/",
      "!**/__tests__/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "coverageReporters": [
      "text-summary",
      "lcov"
    ],
    "snapshotSerializers": []
  }
}
