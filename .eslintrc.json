{
  "extends":  [
    "react-app",
    "plugin:jest/recommended",
    "jest-enzyme"
  ],
  "parser":   "babel-eslint",
  "env":      {
    "browser": true,
    "es6":     true,
    "jest":    true
  },
  "plugins":  [
    "react",
    "jest",
    "import"
  ],
  "settings": {
    "parser":         "babel-eslint",
    "import/parser":  "babel-eslint",
    "import/resolve": {},
    "ecmaFeatures":   {
      "classes": true,
      "jsx":     true
    }
  },
  "rules":    {
    "indent":            [
      "error",
      2
    ],
    "linebreak-style":   [
      "error",
      "unix"
    ],
    "consistent-return": "error"
  },
  "globals":  {
    "socket": true,
    "enzyme": true
  }
}
